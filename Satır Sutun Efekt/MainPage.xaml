<UserControl x:Class="Satır_Sutun_Efekt.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbsatırsutun" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" TextChanged="tbsatırsutun_TextChanged" Width="100" Height="19"/>
        <Grid x:Name="grid" Grid.Row="1" ShowGridLines="True"/>

    </Grid>
</UserControl>
